<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:fillViewport="true" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical" >

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="230dp">

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:id="@+id/imgViewThumb"
				android:src="@mipmap/bg_image_placeholder"
				android:scaleType="centerCrop" />

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:layout_marginBottom="@dimen/dimen_5dp">

					<ToggleButton
						android:id="@+id/toggleButtonFave"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_gravity="center"
						android:background="@drawable/selector_toggle_fave"
						android:textOff=""
						android:textOn="" />

				</LinearLayout>

				<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/black_color_opacity_66">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/dimen_5dp">

						<LinearLayout
							android:orientation="vertical"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:layout_marginRight="@dimen/dimen_5dp">

							<TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="iOS Developer Conference"
                                android:id="@+id/tvTitle"
                                android:layout_gravity="left"
								android:textColor="@color/colorWhite"
								android:textStyle="bold" />

							<TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Ridge Trail, South San Francisco, CA, 94080"
                                android:id="@+id/tvSubtitle"
								android:textColor="@color/colorWhite" />
						</LinearLayout>

						<ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgViewRoute"
							android:src="@mipmap/button_directions" />

					</LinearLayout>
				</FrameLayout>
			</LinearLayout>
		</FrameLayout>
		<View android:background="@drawable/line_accent" android:layout_width="match_parent" android:layout_height="3dp"/>

		<LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:padding="@dimen/dimen_5dp"
			android:background="@color/colorWhite">

			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Posted by John Doe"
                android:id="@+id/tvPostedBy"
                android:layout_gravity="center|left"
				android:layout_weight="1"
				android:layout_marginRight="@dimen/dimen_5dp"
				android:textSize="@dimen/text_size_14sp" />

			<TextView
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:id="@+id/tvDetailsJoined"
                android:text="Joined"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:background="@color/colorAccent"
                android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:layout_marginLeft="@dimen/dimen_5dp"
			android:layout_marginTop="@dimen/dimen_20dp"
			android:layout_marginRight="@dimen/dimen_5dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:layout_margin="@dimen/dimen_5dp">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@mipmap/ic_detail_day_left"
					android:scaleType="centerCrop"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:layout_gravity="center" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Friday, May 19 at 1:25 PM"
					android:id="@+id/tvDetailsDate"
					android:layout_gravity="center|left"
					android:textSize="@dimen/text_size_14sp" />

			</LinearLayout>

			<View android:background="@drawable/line_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:layout_marginLeft="@dimen/dimen_5dp"
			android:layout_marginRight="@dimen/dimen_5dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:layout_margin="@dimen/dimen_5dp">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@mipmap/ic_detail_pin_info"
					android:scaleType="centerCrop"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:layout_gravity="center" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Ridge Trail, South San Francisco, CA, 94080"
					android:layout_gravity="center|left"
					android:layout_weight="1"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:id="@+id/tvDetailsAddress"
					android:lines="@integer/num_new_lines_1"
					android:ellipsize="end"
					android:textSize="@dimen/text_size_14sp" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="@string/show_map"
					android:id="@+id/tvDetailsShowMap"
					android:layout_gravity="center|right"
					android:textColor="@color/colorHyperLink"
					android:textSize="@dimen/text_size_12sp"
					android:singleLine="false" />

			</LinearLayout>

			<View android:background="@drawable/line_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:layout_marginLeft="@dimen/dimen_5dp"
			android:layout_marginRight="@dimen/dimen_5dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:layout_margin="@dimen/dimen_5dp">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@mipmap/ic_detail_ticket"
					android:scaleType="centerCrop"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:layout_gravity="center" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Ticket Available"
					android:layout_gravity="center|left"
					android:layout_weight="1"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:id="@+id/tvTicketAvailable"
					android:textSize="@dimen/text_size_14sp" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="@string/find_tickets"
					android:id="@+id/tvDetailsFindTickets"
					android:layout_gravity="center|right"
					android:textColor="@color/colorHyperLink"
					android:textSize="@dimen/text_size_12sp" />

			</LinearLayout>

			<View android:background="@drawable/line_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:layout_marginLeft="@dimen/dimen_5dp"
			android:layout_marginTop="@dimen/dimen_20dp"
			android:layout_marginRight="@dimen/dimen_5dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:id="@+id/imgViewDetailsThumb1"
					android:src="@mipmap/bg_image_thumb_placeholder"
					android:scaleType="centerCrop"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:layout_marginLeft="@dimen/dimen_5dp"
					android:layout_marginTop="@dimen/dimen_5dp" />

				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:id="@+id/imgViewDetailsThumb2"
					android:src="@mipmap/bg_image_thumb_placeholder"
					android:scaleType="centerCrop"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:layout_marginTop="@dimen/dimen_5dp" />

				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:id="@+id/imgViewDetailsThumb3"
					android:src="@mipmap/bg_image_thumb_placeholder"
					android:scaleType="centerCrop"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:layout_marginTop="@dimen/dimen_5dp" />

				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:id="@+id/imgViewDetailsThumb4"
					android:src="@mipmap/bg_image_thumb_placeholder"
					android:scaleType="centerCrop"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:layout_marginTop="@dimen/dimen_5dp" />
			</LinearLayout>

			<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="John, George, Jonathan and others are going."
                android:layout_gravity="center|left"
                android:textSize="@dimen/text_size_14sp"
				android:layout_marginLeft="@dimen/dimen_5dp"
				android:layout_marginRight="@dimen/dimen_5dp"
				android:layout_marginBottom="@dimen/dimen_5dp"
				android:id="@+id/tvDetailsThumbNames"
				android:layout_marginTop="@dimen/dimen_5dp" />

			<View android:background="@drawable/line_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:layout_marginLeft="@dimen/dimen_5dp"
			android:layout_marginTop="@dimen/dimen_10dp"
			android:layout_marginRight="@dimen/dimen_5dp">

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                    android:layout_gravity="center|left"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:id="@+id/tvDetailsDesc" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
					android:layout_gravity="center|left|top"
					android:textSize="@dimen/text_size_14sp"
					android:layout_marginLeft="@dimen/dimen_5dp"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:layout_marginBottom="@dimen/dimen_5dp"
					android:layout_marginTop="@dimen/dimen_5dp"
					android:id="@+id/tvDetailsDesc1Line"
					android:lines="1"
					android:ellipsize="end" />
			</FrameLayout>

			<View android:background="@drawable/line_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:layout_marginLeft="@dimen/dimen_5dp"
			android:layout_marginRight="@dimen/dimen_5dp"
			android:id="@+id/linearShowMoreDesc"
			android:layout_marginBottom="@dimen/dimen_20dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="25dp"
				android:layout_marginTop="@dimen/dimen_5dp"
				android:layout_marginRight="@dimen/dimen_5dp"
				android:layout_marginBottom="@dimen/dimen_5dp">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_arrow_gray"
					android:layout_gravity="center" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="@string/show_more"
					android:layout_gravity="center|left"
					android:layout_weight="1"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:textSize="@dimen/text_size_14sp"
					android:id="@+id/tvDetailsShowMoreDesc" />

			</LinearLayout>

			<View android:background="@drawable/line_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:layout_marginLeft="@dimen/dimen_5dp"
			android:layout_marginRight="@dimen/dimen_5dp"
			android:id="@+id/linearDetailsComment1">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="@dimen/dimen_5dp"
				android:layout_marginBottom="@dimen/dimen_5dp">

				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:id="@+id/imgViewDetailsCommentThumb1"
					android:src="@mipmap/bg_image_thumb_placeholder"
					android:scaleType="centerCrop"
					android:layout_marginLeft="@dimen/dimen_5dp"
					android:layout_marginRight="@dimen/dimen_5dp" />

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center">

					<LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Jonathan Moore"
                            android:textSize="@dimen/text_size_14sp"
                            android:layout_marginRight="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
							android:id="@+id/tvDetailsCommentName1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="19 Thu 04:13 PM"
                            android:layout_gravity="center|left"
                            android:textSize="@dimen/text_size_12sp"
                            android:layout_marginRight="@dimen/dimen_5dp"
                            android:id="@+id/tvDetailsCommentDate1"
                            android:gravity="right" />
                    </LinearLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="Definitely going this event."
						android:layout_gravity="center|left"
						android:textSize="@dimen/text_size_13sp"
						android:layout_marginRight="@dimen/dimen_5dp"
						android:id="@+id/tvDetailsCommentText1"
						android:gravity="right" />
				</LinearLayout>

			</LinearLayout>

			<View android:background="@drawable/line_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:layout_marginLeft="@dimen/dimen_5dp"
			android:layout_marginRight="@dimen/dimen_5dp"
			android:id="@+id/linearDetailsComment2">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="@dimen/dimen_5dp"
				android:layout_marginTop="@dimen/dimen_5dp">

				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:id="@+id/imgViewDetailsCommentThumb2"
					android:src="@mipmap/bg_image_thumb_placeholder"
					android:scaleType="centerCrop"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:layout_marginLeft="@dimen/dimen_5dp" />

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:text="John Doe"
							android:textSize="@dimen/text_size_14sp"
							android:layout_marginRight="@dimen/dimen_5dp"
							android:layout_weight="1"
							android:textStyle="bold"
							android:id="@+id/tvDetailsCommentName2" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:text="17 Tue 04:14 PM"
							android:layout_gravity="center|left"
							android:textSize="@dimen/text_size_12sp"
							android:layout_marginRight="@dimen/dimen_5dp"
							android:id="@+id/tvDetailsCommentDate2"
							android:gravity="right" />
					</LinearLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="How to pay for the tickets?"
						android:layout_gravity="center|left"
						android:textSize="@dimen/text_size_13sp"
						android:layout_marginRight="@dimen/dimen_5dp"
						android:id="@+id/tvDetailsCommentText2"
						android:gravity="right" />
				</LinearLayout>

			</LinearLayout>

			<View android:background="@drawable/line_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:layout_marginLeft="@dimen/dimen_5dp"
			android:layout_marginRight="@dimen/dimen_5dp"
			android:id="@+id/linearShowMoreComment"
			android:layout_marginBottom="@dimen/dimen_20dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="25dp"
				android:layout_marginTop="@dimen/dimen_5dp"
				android:layout_marginRight="@dimen/dimen_5dp"
				android:layout_marginBottom="@dimen/dimen_5dp">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_arrow_gray"
					android:layout_gravity="center" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="@string/view_user_posts"
					android:layout_gravity="center|left"
					android:layout_weight="1"
					android:layout_marginRight="@dimen/dimen_5dp"
					android:textSize="@dimen/text_size_14sp" />

			</LinearLayout>

			<View android:background="@drawable/line_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

		</LinearLayout>

	</LinearLayout>


</ScrollView>
